{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "files": {
    "ignore": ["node_modules/", "out/", ".next/", "coverage/", "public/"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all"
    }
  }
}
