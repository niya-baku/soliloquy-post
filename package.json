{
  "name": "next-js-boilerplate",
  "version": "3.23.0",
  "scripts": {
    "dev": "next dev",
    "dev:mock-server": "NEXT_PUBLIC_USE_MOCK=true next dev",
    "build": "npm run db:migrate && next build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next .swc out coverage",
    "lint": "biome check .",
    "format": "biome format . --write",
    "check-types": "tsc --noEmit --pretty",
    "test": "jest",
    "commit": "cz",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx ./scripts/dbMigrate.ts",
    "db:studio": "dotenv -c -- drizzle-kit studio",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:serve": "http-server storybook-static --port 6006 --silent",
    "serve-storybook": "run-s storybook:*",
    "test-storybook:ci": "start-server-and-test serve-storybook http://localhost:6006 test-storybook",
    "prepare": "husky install",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@libsql/client": "^0.3.5",
    "@supabase/supabase-js": "^2.38.2",
    "@t3-oss/env-nextjs": "^0.7.1",
    "axios": "^1.6.0",
    "classnames": "^2.3.2",
    "drizzle-orm": "^0.28.6",
    "next": "^13.5.6",
    "next-seo": "^6.1.0",
    "next-sitemap": "^4.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "sharp": "^0.32.6",
    "swr": "^2.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@commitlint/cz-commitlint": "^17.8.0",
    "@next/bundle-analyzer": "^13.5.6",
    "@percy/cli": "^1.27.3",
    "@percy/playwright": "^1.0.4",
    "@playwright/test": "^1.39.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/blocks": "^7.5.1",
    "@storybook/nextjs": "^7.5.1",
    "@storybook/react": "^7.5.1",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.30",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "encoding": "^0.1.13",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "msw": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "semantic-release": "^19.0.5",
    "start-server-and-test": "^2.0.1",
    "storybook": "^7.5.1",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "author": "Ixartz (https://github.com/ixartz)"
}
